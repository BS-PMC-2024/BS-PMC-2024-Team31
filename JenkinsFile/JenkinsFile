pipeline {
    agent any
    environment {
        DB = credentials('mongodb-credentials-id')
        EMAIL_USER = credentials('email-user-id')
        EMAIL_PASS = credentials('email-pass-id')
        PORT = '3001'
        JWTPRIVATEKEY = '123'
        BCRYPT_SALT = '10'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'git@github.com:BS-PMC-2024/BS-PMC-2024-Team31.git'
            }
        }                                                                                                                                                        stage('Build') {
            steps {
                script {
                    docker.build('your-node-app', '-f server/Dockerfile server')
                    docker.build('your-react-app', '-f client/Dockerfile client')
                }
            }
        }                                                                                                                                                       stage('Test') {
            steps {
                script {
                    docker.image('your-node-app').inside {
                        sh 'npm install'
                        sh 'npm test'
                    }
                    docker.image('your-react-app').inside {
                        sh 'npm install'
                        sh 'npm test'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.image('your-node-app').inside {
                        sh 'npm run build'
                        sh 'npm start'
                    }
                    docker.image('your-react-app').inside {
                        sh 'npm run build'
                        sh 'serve -s build'
                    }
                }
            }
        }
    }
   post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
